{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    // Generate d.ts files
    "declaration": true,
    "emitDeclarationOnly": false,
    // "declarationDir": "lib/types",
    "strict": true,
    // Additional Checks
    "noImplicitReturns": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
